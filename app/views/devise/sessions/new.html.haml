.box.login
  %h2 Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email
      = f.email_field :email, autofocus: true, autocomplete: "email"
      .hint Use "bob@example.com"

    .field
      = f.label :password
      = f.password_field :password, autocomplete: "off"
      .hint Use "password"

    .actions
      = f.submit "Log in"
